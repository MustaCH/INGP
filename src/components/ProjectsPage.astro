---
import { getCollection } from 'astro:content'; 

const projects = await getCollection('projects');

---


<div class="bg-neutral-900 p-6 rounded-lg">
    <div class="flex flex-col md:flex-row gap-4 items-center">
        <img src="projects-cover.png" alt="" transition:name="project-cover">
        <h1 class="text-6xl text-white font-semibold" transition:name="projects">Projects.</h1>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 py-4">
        {
            projects.map((media) => (
                <article class={`flex items-end justify-start gap-3 capitalize hover:scale-105 duration-150 h-72 rounded-lg bg-cover md:grayscale hover:grayscale-0 overflow-hidden`} style={{ backgroundImage: `url(${media.data.image})` }}>
                    <div class="flex flex-col justify-end items-start pb-4 bg-gradient-to-t from-neutral-900 to-transparent w-full ps-4 h-24">
                        <div class="flex items-center justify-between text-white py-2 w-full pe-4">
                            <div class="flex items-center gap-4">
                                <p class="text-2xl drop-shadow-md font-semibold">{media.data.name}</p>
                                <a target="_blank" href={media.data.link}>
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" width="24" height="24" stroke-width="2"> 
                                        <path d="M12 6h-6a2 2 0 0 0 -2 2v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2 -2v-6"></path> <path d="M11 13l9 -9"></path> <path d="M15 4h5v5"></path> 
                                    </svg> 
                                </a>
                                {
                                    media.data.repository === 'private' ? '' : 
                                        <a target="_blank" href={media.data.repository}>
                                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" width="24" height="24" stroke-width="2"> 
                                                <path d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5">
                                                </path> 
                                            </svg> 
                                        </a>
                                }   
                            </div>
                        </div>
                    </div>
                </article>
            ))
        }	
    </div> 
</div>